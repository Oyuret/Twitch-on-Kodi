<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <!-- Login -->
    <category label="30127">
        <setting id="oauth_token" type="text" label="30099" default=""/>
        <setting label="30135" id="show_token_url" type="action" action="RunPlugin(plugin://$ID/?mode=get_token_url)" option="close"/>
        <setting label="30132" type="lsep"/>
        <setting label="" type="lsep"/>
    </category>
    <!-- General -->
    <category label="30076">
        <!-- Video Quality -->
        <setting id="video" type="enum" label="30040"
                 lvalues="30102|30103|30104|30105|30106|30107|30108|30109|30110|30111" default="3"/>
        <setting label="30112" type="lsep"/>
        <!-- Title Display -->
        <setting id="title_display" type="enum" label="30045" lvalues="30046|30047|30048|30049|30051|30067" default="0"/>
        <!-- Truncate titles -->
        <setting id="title_truncate" type="bool" label="30065" default="true"/>
        <setting label="30123" type="slider" id="items_per_page" default="25" range="10,100" option="int"/>
    </category>
    <!-- Cache -->
    <category label="30120">
        <setting label="30121" type="slider" id="cache_expire_time" default="3" range="0,60" option="int"/>
        <setting label="30122" id="reset_cache" type="action" action="RunPlugin(plugin://$ID/?mode=reset_cache)"/>
    </category>
    <!-- Live Previews -->
    <category label="30082">
        <!-- Live Preview Settings -->
        <setting id="live_previews_enable" type="bool" label="30083" default="false"/>
        <!-- Live Preview Settings WARNING LABELS -->
        <setting label="30085" type="lsep" enable="eq(-1,false)" visible="eq(-1,false)"/>
        <setting label="30086" type="lsep" enable="eq(-2,false)" visible="eq(-2,false)"/>
        <!-- Remove Live Previews -->
        <setting id="clear_previews" label="30084" type="action"
                 action="RunPlugin(plugin://$ID/?mode=clear_live_previews&amp;notify=true)"
                 enable="eq(-3,true)" visible="eq(-3,true)"/>
        <!-- Automaticall Refresh Live Previews -->
        <setting id="refresh_previews" type="bool" label="30074" default="false"
                 enable="eq(-4,true)" visible="eq(-4,true)"/>
        <!-- Automatic refresh interval -->
        <setting label="30094" type="slider" id="refresh_interval" default="10" range="0,1,180" option="int"
                 enable="eq(-1,true)" visible="eq(-1,true)"/>
        <!-- Notifications when refreshing -->
        <setting id="notify_refresh" type="bool" label="30087" default="true"
                 enable="eq(-6,true)" visible="eq(-6,true)"/>
    </category>
    <!-- IRC -->
    <category label="30081">
        <!-- Enable IRC Chat -->
        <setting id="irc_enable" type="bool" label="30052" default="false" enable="System.HasAddon(script.ircchat)"/>
        <setting label="30075" id="install_ircscript" type="action" action="RunPlugin(plugin://$ID/?mode=install_ircchat)"
                 enable="!System.HasAddon(script.ircchat)" visible="!System.HasAddon(script.ircchat)" option="close"/>
    </category>
    <!-- Developer -->
    <category label="30118">
        <!-- OAuth Client ID -->
        <setting id="oauth_clientid" type="text" label="30097" default=""/>
    </category>
</settings>
